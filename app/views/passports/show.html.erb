
<div class="container my-5">
  <div class="card shadow-sm" id="card-show">
    <div class="card-body">
      <h3 class="card-title">Your New Passport: <span class="text-primary">"<%= @passport.title %>"</span></h3>
      <p class="card-text">
        <strong>Description:</strong> <%= @passport.description %>
      </p>
      <p class="card-text">
        <strong>Price:</strong> $<%= @passport.price %>
      </p>
      <div class="mt-4">
        <%= link_to 'Edit Passport', edit_passport_path(@passport), class: "btn btn-warning me-2" %>
        <%= link_to 'Back to Passports', passports_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>



<%= simple_form_for ([@passport, @passport.bookings.new]) do |f| %>
  <div>
    <%= f.input :start_date,
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
  </div>

  <div>
    <%= f.input :end_date,
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>
  </div>

  <div>
    <%= f.button :submit, 'Create Booking' %>
  </div>
<% end %>

 <%= link_to 'Back to Passports', passport_path(@passport) %>

<h2>delete a booking</h2>
<%= link_to 'Delete Booking', passport_path(@passport), method: :delete, data: { confirm: 'Are you sure you want to delete this booking?' } %>

<% @passport.photos.each do |photo| %>
  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
<% end %>
