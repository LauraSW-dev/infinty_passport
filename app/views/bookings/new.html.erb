<%= simple_form_for @booking do |f| %>
  <div>
    <%= f.input :start_date,
            as: :string,
            input_html: { data: { controller: "flatpickr" } } %>
  </div>

  <div>
    <%= f.input :end_date, as: :string, input_html: { data: { controller: "flatpickr" } } %>
  </div>

  <div>
    <%= f.button :submit, 'Create Booking' %>
  </div>
<% end %>

<h2>delete a booking</h2>
<%= link_to 'Delete Booking', passport_booking_path(@passport, booking), method: :delete, data: { confirm: 'Are you sure you want to delete this booking?' } %>
